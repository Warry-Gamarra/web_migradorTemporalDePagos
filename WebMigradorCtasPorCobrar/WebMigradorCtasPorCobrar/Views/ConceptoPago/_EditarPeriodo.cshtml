    $('#error_title').hide();
    $('#error_descrip').html('@observ_descrip');

    $("form").submit(function () {
        if (parseInt($("#submited").val()) > 0) {
            return false;
        }
        else {
            $('#error_descrip').html('');
            $('#error_title').show();
    }
