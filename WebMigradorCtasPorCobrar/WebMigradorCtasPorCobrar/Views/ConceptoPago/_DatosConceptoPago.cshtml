@model WebMigradorCtasPorCobrar.Models.ViewModels.ConceptoPagoViewModel

<div class="modal-header">
    <h5 class="modal-title">Datos del concepto de pago</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row px-4">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th class="text-center" scope="col"></th>
                    <th class="text-center" scope="col">Temporal de pagos - Migración</th>
                    <th class="text-center" scope="col">Recaudación de ingresos</th>
                </tr>
            </thead>
            <tbody>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Cuota de pago</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Cuota_pago</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.I_ProcesoID</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Código Concepto</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Id_cp</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.I_ConcPagID</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Nombre del concepto</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Descripcio</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.T_ConceptoPagoDesc</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Año  y periodo</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Ano - @Model.ConceptoPagoMigracion.P </td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.I_Anio - @Model.ConceptoPagoCtasCobrar.T_PeriodoCod</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Tipo obligación</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Tipo_oblig</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.T_Obligigacion</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Clasificador</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Clasificad</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.T_Clasificador</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Monto</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Monto</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.M_Monto</td>
                </tr>
                <tr class="thead-light">
                    <th class="text-right" scope="row">Codigo RC</th>
                    <td class="text-center">@Model.ConceptoPagoMigracion.Id_cp</td>
                    <td class="text-center">@Model.ConceptoPagoCtasCobrar.I_ConcPagID</td>
                </tr>
                @*<tr class="thead-light">
            <th class="text-right" scope="row">Fecha de Nacimiento</th>
            <td class="text-center">
                @if (Model.CuotaMigracion.D_FecNac.HasValue)
                {
                    <span>@Model.CuotaMigracion.D_FecNac.Value.ToShortDateString()</span>
                }
            </td>
            <td class="text-center">
                @if (Model.CuotaCtasCobrar.D_FecNac.HasValue)
                {
                    <span>@Model.CuotaCtasCobrar.D_FecNac.Value.ToShortDateString()</span>
                }
            </td>
        </tr>*@
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-outline-primary modal-link-reload-lg" href="@Url.Action("Editar", "ConceptoPago", new { id = Model.ConceptoPagoMigracion.I_RowID, obsID = 0})"><i class="fa fa-pencil"></i> Editar</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>