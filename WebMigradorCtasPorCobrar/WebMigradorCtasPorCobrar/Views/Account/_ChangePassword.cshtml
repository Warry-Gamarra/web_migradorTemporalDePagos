@model WebMigradorCtasPorCobrar.Models.Entities.Config.Password

@Scripts.Render("~/bundles/jqueryval")

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center">Cambiar contraseña: @User.Identity.Name</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
@using (Ajax.BeginForm("ChangePassword", "Account", new { area = "" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "div_msg", OnBegin = "Load", OnComplete = "Stop" }))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                @Html.AntiForgeryToken()
                <fieldset>
                    <br />
                    <legend><span class="text-muted">Usted ha iniciado sesión como <strong>@User.Identity.Name</strong></span></legend>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-12" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", size = "50" })
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.CurrentPassword)</span>
                        </div>
                    </div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", size = "50" })
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.NewPassword)</span>
                        </div>
                    </div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", size = "50" })
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                        </div>
                    </div>
                </fieldset>
                <br />
            </div>
        </div>
    </div>

    <div class="modal-footer" id="div_msg">
        <div class="col-md-12" style="display:none" id="loading">
            <h6>Cambiando Contraseña...</h6>
            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" id="btnsubmit"><i class="fa fa-refresh"></i>&nbsp;Cambiar contraseña</button>
        <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cancelar</button>
    </div>
}
