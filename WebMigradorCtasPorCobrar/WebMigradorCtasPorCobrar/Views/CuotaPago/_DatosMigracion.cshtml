
@model IEnumerable<WebMigradorCtasPorCobrar.Models.Entities.Migracion.CuotaPago>
@using GridMvc.Html


<div class="table-responsive" style="min-height:300px">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Cuota_pago).Titled("Codigo").Filterable(true);
    columns.Add(c => c.Descripcio).Titled("Descripción").Filterable(true);
    columns.Add(c => c.N_cta_cte).Titled("Nro. Cuenta").Filterable(true);
    columns.Add(c => c.Codigo_bnc).Css("text-center").Titled("Cod. BNC").Filterable(true);
    columns.Add(c => c.Fch_venc).Css("text-center").RenderValueAs(model => model.Fch_venc.ToShortDateString()).Titled("Fec. Venc").Filterable(true);
    columns.Add(c => c.Prioridad).Css("text-center").Titled("Prioridad").Filterable(true);
    columns.Add(c => c.C_mora).Css("text-center").Encoded(false).Sanitized(false)
           .RenderValueAs(model => model.C_mora ? Html.Raw("<span class=\"badge badge-pill badge-info\">Si</span>") : Html.Raw("<span class=\"badge badge-pill badge-secondary\">No</span>"))
           .Titled("Mora").Filterable(true);
    columns.Add(c => c.Eliminado).Css("text-center").Encoded(false).Sanitized(false)
           .RenderValueAs(model => model.Eliminado ? Html.Raw("<span class=\"badge badge-pill badge-warning\">Si</span>") : Html.Raw("<span class=\"badge badge-pill badge-secondary\">No</span>"))
           .Titled("Eliminado").Filterable(true);
    columns.Add(c => c.B_Migrable).Css("text-center").Encoded(false).Sanitized(false)
           .RenderValueAs(model => model.B_Migrable ? Html.Raw("<i class=\"fa fa-check-circle text-success\"></i>") : Html.Raw("<i class=\"fa fa-times-circle text-danger\"></i>"))
           .Titled("Migrable").Filterable(true);
    columns.Add(c => c.B_Migrado).Css("text-center").Encoded(false).Sanitized(false)
           .RenderValueAs(model => model.B_Migrado ? Html.Raw("<i class=\"fa fa-check-circle text-success\"></i>") : Html.Raw("<i class=\"fa fa-times-circle text-danger\"></i>"))
           .Titled("Migrado").Filterable(true);
    columns.Add().SetWidth(120).Css("text-right").Encoded(false).Sanitized(false)
                .RenderValueAs(model => model.B_Migrable ?
                                    @Html.Raw("")
                                    : @Html.Raw($"<a href=\"{ Url.Action("Observaciones", "CuotaPago", new { id = model.I_RowID, area = "" })}\" class=\"modal-link\"><i class=\"fa fa-search-plus\" aria-hidden=\"true\">&nbsp;</i><span class=\"d-none d-md-inline-block\">Observacion</span></a>"));
    columns.Add().Css("text-right").Encoded(false).Sanitized(false)
                    .RenderValueAs(model => model.B_Migrable ?
                                        @Html.Raw("")
                                        : @Html.Raw($"<a href=\"{ Url.Action("Editar", "CuotaPago", new { id = model.I_RowID, area = "" })}\" class=\"modal-link\"><i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\">&nbsp;</i><span class=\"d-none d-md-inline-block\">Corregir</span></a>"));
}
    ).WithPaging(20).Sortable(true).WithGridItemsCount("Registros encontrados").EmptyText("No se encontraron registros")
</div>


<script>
    $('#btn-tp').removeClass('active');
    $('#btn-mg').addClass('active');
    $('#btn-proc').removeClass('active');
</script>
