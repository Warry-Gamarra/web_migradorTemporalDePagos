
@model IEnumerable<WebMigradorCtasPorCobrar.Models.Entities.TemporalPagos.CuotaPago>
@using GridMvc.Html

<div class="table-responsive" style="min-height:300px; font-size:13px;">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Cuota_pago).Filterable(true);
    columns.Add(c => c.Descripcio).Filterable(true);
    columns.Add(c => c.Fch_venc).Css("text-center").Filterable(true);
    columns.Add(c => c.N_cta_cte).Titled("Nro. Cuenta").Filterable(true);
    columns.Add(c => c.Codigo_bnc).Css("text-center").Filterable(true);
    columns.Add(c => c.Prioridad).Css("text-center").Filterable(true);
    columns.Add(c => c.C_mora).Css("text-center").Encoded(false).Sanitized(false).Filterable(true)
            .RenderValueAs(model => model.C_mora ? Html.Raw("<span class=\"h5\"><i class=\"fa fa-check-circle text-success\"></i></span>")
                                                 : Html.Raw("<span class=\"h5\"><i class=\"fa fa-minus-circle text-secondary\"></i></span>"));
    columns.Add(c => c.Eliminado).Css("text-center").Encoded(false).Sanitized(false).Filterable(true)
            .RenderValueAs(model => model.Eliminado ? Html.Raw("<span class=\"h5\"><i class=\"fa fa-check-circle text-warning\"></i></span>")
                                                    : Html.Raw("<span class=\"h5\"><i class=\"fa fa-minus-circle text-secondary\"></i></span>"));
}
    ).WithPaging(20).Sortable(true).WithGridItemsCount("Registros encontrados").EmptyText("No se encontraron registros")
</div>

<script>
    $('#btn-tp').addClass('active');
    $('#btn-mg').removeClass('active');
    $('#btn-proc').removeClass('active');
</script>
