
@model IEnumerable<WebMigradorCtasPorCobrar.Models.Helpers.Response>


<div class="col-md-12" style="display:none" id="loading">
    <h6>Espere un momento...</h6>
    <div class="progress">
        <div class="indeterminate"></div>
    </div>
</div>
<div class="modal-header">
    <h5 class="modal-title">Resultado:</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @foreach (var result in Model)
    {
        <p class="h5">@result.Action</p>
        <div class="card-text alert alert-@result.Color">
            @if (result.IsDone)
            {
                <span class="pull-left mt-2">
                    <i class="fa fa-2x fa-check-circle"></i>
                </span>
            }
            else
            {
                <span class="pull-left mt-2">
                    <i class="fa fa-2x fa-times-circle"></i>
                </span>

            }
            <div class="offset-1">@Html.Raw(result.Message)</div>
        </div>
    }
</div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>
<script>
    $(".modal").on('hide.bs.modal', function () {
        location.reload();
    })
</script>
