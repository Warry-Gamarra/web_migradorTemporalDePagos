@model WebMigradorCtasPorCobrar.Models.Helpers.Response


<div class="col-md-12" style="display:none" id="loading">
    <h6>Espere un momento...</h6>
    <div class="progress">
        <div class="indeterminate"></div>
    </div>
</div>

<div class="col-12 text-center alert alert-@Model.Color"><i class="fa @Model.Icon">&nbsp;</i>@Html.Raw(Model.Message)</div>

<button type="submit" class="btn btn-primary" style="@Model.CurrentID"><i class="fa fa-save"></i>&nbsp;Guardar</button>
<button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cerrar</button>

<script>
    $(".modal").on('hide.bs.modal', function () {
        location.reload();
    })
</script>