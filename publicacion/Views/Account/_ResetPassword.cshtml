
@Scripts.Render("~/bundles/jqueryval")

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <p class="modal-title h5"><i class="fa fa-refresh">&nbsp;</i>Reestablecer Contraseña</p>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

@using (Ajax.BeginForm("ResetPassword", "Account", new { area = "" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "div_msg", OnBegin = "Load", OnComplete = "Stop" }, new { @class = "form-horizontal" }))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("Usuario", new { @class = "col-md-12", @for = "usuario" })
                    <div class="col-md-10 col-md-offset-1">
                        @Html.DropDownList("usuario", ViewBag.Users as SelectList, " SELECCIONAR  ", new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal-footer" id="div_msg">
        <div class="col-md-12" style="display:none" id="loading">
            <h6>Actualizando la contraseña</h6>
            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" id="btnsubmit"><i class="fa fa-refresh"></i>&nbsp;Reestablecer</button>
        <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cancelar</button>
    </div>
}

